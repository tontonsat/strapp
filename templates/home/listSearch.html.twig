{% extends 'base.html.twig' %}

{% block title %}Search results - Strapp.xyz{% endblock %}
{% block body %}
<main role="main" class="container-fluid main-content">
    <div class="row user-list-row">
        {% for user in result['bestResult'] %}
        <a class="user-list-link" href="{{ path('home_user', {'slug': user.id}) }}">
            <div class="user-container" data-user="{{ user.id }}">
                <div class="card user-card bestresult-user-card">
                    <div class="row no-gutters">
                        <div class="col-md-auto">
                            {% if user.media is null %}
                            <img src="{{ asset('uploads/avatars/0.jpg') }}" alt="profile picture"
                                class="user-card-avatar">
                            {% else %}
                            <img src="{{ asset('uploads/avatars/' ~ user.media.imageName) | imagine_filter('avatar') }}"
                                alt="profile picture" class="card-img user-card-avatar">
                            {% endif %}
                        </div>
                        <div class="col-md-auto basic-info-col">
                            <div class="card-body user-info">
                                <h6 class="card-title">{{ user.name }} {{ user.lastname }} </h6>@{{ user.username }}
                                <span class="text-muted">({{ user.ratingWriter }}/{{ user.ratingReader }})</span>
                                <p class="card-text"><small class="text-muted">{{ user.currentLocation.city }} - {{
                                        user.currentLocation.country }}<br />
                                        {% if user.mood|length > 25 %}
                                        {{ user.mood[:25] }}...
                                        {% endif %}
                                        {% if user.mood|length <= 25 %}
                                        {{ user.mood }}
                                        {% endif %}
                                    </small>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </a>
