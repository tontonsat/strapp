{% extends 'base.html.twig' %}
{% block stylesheets %}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
    crossorigin="anonymous">
<link href='https://api.mapbox.com/mapbox-gl-js/v0.53.0/mapbox-gl.css' rel='stylesheet' />
<link href="https://fonts.googleapis.com/css?family=Playfair+Display:400,900" rel="stylesheet">
<link href='styles/main.css' rel='stylesheet' />
<link href='styles/register.css' rel='stylesheet' />
{% endblock %}
{% block title %}Registration{% endblock %}
{% block body %}
<div class="container-fluid h-100">
    <div class="row h-100 justify-content-center align-items-center">
        <div class="col-6 register-container">
            <h1>Register</h1>
            {{ form_start(formUser) }}
                <div class="form-row">
                    <div class="col">
                        <div class="form-group">
                            {{ form_row(formUser.name, {'attr': {'placeholder': "Name", 'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            {{ form_row(formUser.lastname, {'attr': {'placeholder': "Lastname", 'class': 'form-control'}}) }}
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    {{ form_row(formUser.username, {'attr': {'placeholder': "Username", 'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(formUser.email, {'attr': {'placeholder': "Email", 'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(formUser.password, {'attr': {'placeholder': "Password", 'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(formUser.confirmPassword, {'attr': {'placeholder': "Confirm password", 'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success form-control btn-login">
                            Register
                    </button>
                </div>
            {{ form_end(formUser) }}
        </div>
    </div>
</div>
{% endblock %}
