{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
<div class="col-10 main-content">
    Profile
    {{ form_start(formProfile) }}
    <div class="form-row">
        <div class="col">
            <div class="form-group">
                {{ form_row(formProfile.name, {'attr': {'placeholder': "Name", 'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                {{ form_row(formProfile.lastname, {'attr': {'placeholder': "Lastname", 'class': 'form-control'}}) }}
            </div>
        </div>
    </div>
    <div class="form-group">
        {{ form_row(formProfile.username, {'attr': {'placeholder': "Username", 'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(formProfile.email, {'attr': {'placeholder': "Email", 'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(formProfile.password, {'attr': {'placeholder': "Password", 'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(formProfile.mood, {'attr': { 'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
    </div>
{{ form_end(formProfile) }}
</div>
{% endblock %}
